@inherits LayoutComponentBase
@inject System.Security.Claims.ClaimsPrincipal CurrentUser
@inject IUriHelper UriHelper

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <a href="https://docs.microsoft.com/en-us/aspnet/" target="_blank" class="ml-md-auto">About</a> &nbsp;

        @if (CurrentUser.Identity.IsAuthenticated)
        {
            <a href="" onclick="@(() => UriHelper.NavigateTo("/Account/Profile"))">Hello @CurrentUser.Identity.Name!</a>
            <text>&nbsp;</text>
            <a href="" onclick="@(() => UriHelper.NavigateTo("/Account/Logout", true))">Logout</a>
        }
        else
        {
            <a href="" onclick="@(() => UriHelper.NavigateTo("/Account/Login", true))">Login</a>
        }

    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
